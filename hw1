# HW1

#question1
def count_vowels(word):
  counter=0
  vowels="aeiouAEIOU"
  for char in word:
    if char in vowels:
      counter+=1
  return counter

#question2
animals=['tiger', 'elephant', 'monkey', 'zebra', 'panther']

for animal in animals:
  print(animal.upper())

#question3
for number in range(1, 21):
  if number%2==0:
    print(number, "is even")
  else:
    print(number, "is odd")

#question4
def sum_of_integers():
  a=input("Enter first num")
  b=input("enter second num")
  return (a+b)
